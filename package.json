{
  "name": "@thgamble/containerization-assist-mcp",
  "version": "1.1.8",
  "description": "TypeScript MCP server for AI-powered containerization workflows with Docker and Kubernetes support",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tools": {
      "types": "./dist/service/tools/index.d.ts",
      "import": "./dist/service/tools/index.js"
    },
    "./tools/*": {
      "types": "./dist/service/tools/handlers/*.d.ts",
      "import": "./dist/service/tools/handlers/*.js"
    },
    "./types": {
      "types": "./dist/domain/types/index.d.ts",
      "import": "./dist/domain/types/index.js"
    },
    "./config": {
      "types": "./dist/service/config/config.d.ts",
      "import": "./dist/service/config/config.js"
    }
  },
  "bin": {
    "container-kit-mcp": "./dist/bin/cli.js",
    "ck-mcp": "./dist/bin/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "postbuild": "npm run copy:assets && npm run make:executable",
    "copy:assets": "cp -r src/infrastructure/ai/prompts/templates dist/infrastructure/ai/prompts/ 2>/dev/null || true",
    "make:executable": "chmod +x dist/bin/cli.js 2>/dev/null || true",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/integration/**/*.test.ts'",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/unit/**/*.test.ts'",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky install",
    "prepublishOnly": "npm run validate && npm run build",
    "start": "node dist/bin/cli.js",
    "start:dev": "tsx watch src/bin/cli.ts",
    "docs:generate": "typedoc --out docs src/index.ts",
    "bundle:check": "npm pack --dry-run",
    "bundle:size": "npm run build && du -sh dist",
    "validate-infrastructure": "node scripts/validate-infrastructure.js",
    "release": "npm run validate && npm run build && npm publish"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "execa": "^9.6.0",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.4",
    "pino": "^9.9.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.22.5"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commander": "^11.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "containerization",
    "docker",
    "kubernetes",
    "ai-assisted",
    "devops",
    "java",
    "spring-boot",
    "maven",
    "gradle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gambtho/container-assist-js.git"
  },
  "bugs": {
    "url": "https://github.com/gambtho/container-assist-js/issues"
  },
  "homepage": "https://github.com/gambtho/container-assist-js#readme"
}
